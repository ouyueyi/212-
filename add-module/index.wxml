<view class="container">
  <!-- 操作员信息 -->
  <view class="card">
    <view class="title">操作员信息</view>
    <view class="info">
      <text class="label">操作员：</text>
      <text class="value">{{operator || '未设置'}}</text>
    </view>
  </view>
  
  <!-- 模块信息 -->
  <view class="card">
    <view class="title">添加新模块</view>
    
    <view class="info">
      <text class="label">模块ID：</text>
      <text class="value">{{moduleId || '未扫描到ID'}}</text>
    </view>
    
    <view class="info">
      <text class="label">名称：</text>
      <input 
        type="text" 
        value="{{name}}" 
        bindinput="inputName"
        placeholder="输入模块名称"
        class="input"
      />
    </view>
    
    <view class="info">
      <text class="label">初始库存：</text>
      <input 
        type="number" 
        value="{{stock}}" 
        bindinput="inputStock"
        class="input"
        placeholder="输入初始库存"
      />
    </view>
    
    <view class="info">
      <text class="label">存放位置：</text>
      <input 
        type="text" 
        value="{{location}}" 
        bindinput="inputLocation"
        class="input"
        placeholder="输入存放位置"
      />
    </view>
    
    <view class="info">
      <text class="label">最小库存：</text>
      <input 
        type="number" 
        value="{{minStock}}" 
        bindinput="inputMinStock"
        class="input"
        placeholder="输入最小库存预警值"
      />
    </view>
  </view>
  
  <!-- 确认按钮 -->
  <button 
    bindtap="addModule" 
    class="submit-btn"
    disabled="{{isProcessing}}"
    loading="{{isProcessing}}"
  >
    {{isProcessing ? '处理中...' : '确认添加'}}
  </button>
</view>