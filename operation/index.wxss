.container {
  padding: 30rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.info {
  display: flex;
  margin: 15rpx 0;
}

.label {
  width: 160rpx;
  color: #666;
}

.value {
  flex: 1;
  color: #333;
}

.operation-buttons {
  display: flex;
  justify-content: space-between;
}

.operation-buttons button {
  width: 48%;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.operation-buttons button.active {
  background: #07c160;
  color: white;
}

.operation-buttons button[disabled] {
  opacity: 0.6;
}

.input-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.input-label {
  width: 120rpx;
  font-size: 32rpx;
}

.quantity-input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #07c160;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 16rpx;
  font-size: 36rpx;
}

.submit-btn[disabled] {
  background: #cccccc;
}

.log-btn {
  margin-top: 20rpx;
  background: #1989fa;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
}